    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=-- Get user preferences and email\nSELECT \n  u.email,\n  COALESCE(up.\"emailNotifications\", true) as \"emailNotifications\"\nFROM auth.users u\nLEFT JOIN user_preferences up ON up.\"userId\" = u.id\nWHERE u.id = '{{ $json.userId }}'",
        "additionalFields": {}
      },
      "id": "4",
      "name": "Get User Email & Prefs",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [
        900,
        200
      ],
      "credentials": {
        "supabaseApi": {
          "id": "YOUR_SUPABASE_CREDENTIAL_ID",
          "name": "Klat Supabase"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "1",
              "leftValue": "={{ $json.emailNotifications }}",
              "rightValue": "true",
              "operator": {
                "type": "boolean",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "5",
      "name": "Notifications Enabled?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [
        1120,
        200
      ]
    },
    {
      "parameters": {
        "sendTo": "={{ $json.email }}",
        "subject": "=Reminder: \"{{ $('Query Upcoming Deadlines').item.json.content.split('\\n')[0].substring(0, 50) }}\" deadline tomorrow",
        "emailType": "html",
        "message": "=<div style=\"font-family: system-ui, -apple-system, sans-serif; max-width: 600px; margin: 0 auto; padding: 20px;\">\n  <h2 style=\"color: #1e3a5f; margin-bottom: 20px;\">Deadline Reminder</h2>\n  <p style=\"color: #333; font-size: 16px;\">\n    Your note \"<strong>{{ $('Query Upcoming Deadlines').item.json.content.split('\\n')[0].substring(0, 50) }}</strong>\" has a deadline coming up:\n  </p>\n  <p style=\"color: #06b6d4; font-size: 18px; font-weight: bold;\">\n    {{ new Date($('Query Upcoming Deadlines').item.json.deadline).toLocaleString('nl-NL', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) }}\n  </p>\n  <hr style=\"border: none; border-top: 1px solid #e5e7eb; margin: 20px 0;\" />\n  <p style=\"color: #666; font-size: 14px;\">\n    You're receiving this because you have email notifications enabled in Klat.\n  </p>\n</div>",
        "options": {}
      },
      "id": "6",
      "name": "Send Email (Gmail)",
