        300
      ]
    },
    {
      "parameters": {
        "resource": "row",
        "operation": "getAll",
        "tableId": "notes",
        "returnAll": true,
        "options": {
          "queryName": "select",
          "queryString": "=id,userId,content,deadline"
        },
        "filters": {
          "conditions": [
            {
              "keyName": "deadline",
              "operator": "gte",
              "keyValue": "={{ $now.plus({hours: 23}).toISO() }}"
            },
            {
              "keyName": "deadline",
              "operator": "lte",
              "keyValue": "={{ $now.plus({hours: 25}).toISO() }}"
            },
            {
              "keyName": "completedAt",
              "operator": "is",
              "keyValue": "null"
            }
          ]
        }
      },
      "id": "2",
      "name": "Query Upcoming Deadlines",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [
        460,
        300
      ],
      "credentials": {
        "supabaseApi": {
          "id": "YOUR_SUPABASE_CREDENTIAL_ID",
          "name": "Klat Supabase"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "1",
              "leftValue": "={{ $json.length }}",
              "rightValue": "0",
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "3",
