// Prisma schema voor klat
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Note {
  id          String    @id @default(cuid())
  date        DateTime  // Note date (can have multiple notes per day)
  content     String    @db.Text // Markdown content
  deadline    DateTime? // Optionele deadline voor to-do's
  completedAt DateTime? // Timestamp wanneer notitie voltooid is
  tags        Tag[]     @relation("NoteToTag")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([date])
  @@index([createdAt])
  @@index([deadline])
  @@index([completedAt])
  @@map("notes")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String? // Hex color voor UI
  notes     Note[]   @relation("NoteToTag")
  createdAt DateTime @default(now())

  @@index([name])
  @@map("tags")
}
